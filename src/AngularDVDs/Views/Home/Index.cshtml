<div class="container-fluid">
    <div class="col-lg-3">
        <div class="panel panel-primary" ng-controller="directorListCtrl">
            <div class="panel-heading">
                <h3 class="panel-title">Recently Added Directors<span class="glyphicon glyphicon-plus pull-right action-icon" data-toggle="modal" href="#addDirectorModal"></span></h3>
            </div>
            <div class="panel-body">
                <ul>
                    <li ng-repeat="dir in DirectorsNameList | limitTo: 3" class="repeated-item">{{dir.DIRECTOR_NAME}}</li>
                </ul>
            </div>
            
            <div class="modal fade" id="addDirectorModal">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title">Add Director</h4>
                        </div>
                        <div class="modal-body">
                            <div class="input-group">
                                <span class="input-group-addon" id="dirName-addOn">Director Name</span>
                                <input type="text" class="form-control" placeholder="Username" aria-describedby="dirName-addOn" ng-model="dirToAdd" data-toggle="popover" data-trigger="focus" data-content="Director exists in database." id="newDirInput">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary" ng-click="addDirector(dirToAdd)">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-primary" ng-controller="genreListCtrl">
            <div class="panel-heading">
                <h3 class="panel-title">Recently Added Genres <span class="glyphicon glyphicon-plus pull-right action-icon"></span></h3>
            </div>
            <div class="panel-body">
                <ul>
                    <li ng-repeat="gen in genres" class="repeated-item">{{gen.GENRE_NAME}}</li>
                </ul>
            </div>
        </div>
    </div>


    <div class="col-lg-9">
        <div class="panel panel-primary" ng-controller="dvdListCtrl">
            <div class="panel-heading">
                <h3 class="panel-title form-inline">DVD List <span class="glyphicon glyphicon-refresh action-icon pull-right" ng-click="refreshData()"></span></h3>
            </div>

            <div class="panel-body">
                <div class="input-group" style="margin-bottom:10px">
                    <span class="input-group-addon" id="Filter-Addon">Filter</span>
                    <input type="text" class="form-control" placeholder="Title" aria-describedby="Filter-Addon" ng-model="dvdSearch">
                </div>
                

                <table class="table table-condensed table-stripped table-hover">
                    <thead>
                    <tr>
                        <th>Title</th>
                        <th>Genre</th>
                        <th>Director</th>
                        <th>Year</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr class="repeated-item" ng-repeat="dvd in dvds | filter: dvdSearch">
                        <td>{{dvd.DVD_TITLE}}</td>
                        <td>{{getGenre(dvd.DVD_GENRE_ID).GENRE_NAME}}</td>
                        <td>{{getDirector(dvd.DVD_DIRECTOR_ID).DIRECTOR_NAME}}</td>
                        <td>{{dvd.DVD_RELEASE_YEAR}}</td>
                        <td><span class="glyphicon glyphicon-remove action-icon text-danger pull-right" data-toggle="tooltip" data-placement="right" title="Remove this DVD" ng-click="removeDVD(dvd.DVD_ID)"></span></td>
                    </tr>
                    <tr id="AddDvdRow" ng-hide="addMode">
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td><span class="glyphicon glyphicon-plus text-success action-icon pull-right" ng-hide="addMode" ng-click="enableAddMode(true)"></span></td>
                    </tr>
                    <tr add-dvd-inline ng-show="addMode"></tr>
                    </tbody>
                </table>

            </div>
            @*<div class="panel-footer">
                <button class="btn btn-default">Button</button>
            </div>*@
        </div>
    </div>
</div>