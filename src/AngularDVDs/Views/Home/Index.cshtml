<div class="container-fluid">
    <div class="col-lg-3">
        <div class="panel panel-success" ng-controller="directorListCtrl">
            <div class="panel-heading">
                <h3 class="panel-title">Recently Added Directors<span class="glyphicon glyphicon-plus pull-right action-icon"></span></h3>
            </div>
            <div class="panel-body">
                <ul>
                    <li ng-repeat="dir in DirectorsNameList">{{dir.DIRECTOR_NAME}}</li>
                </ul>
            </div>
        </div>
        <div class="panel panel-success" ng-controller="genreListCtrl">
            <div class="panel-heading">
                <h3 class="panel-title">Recently Added Genres <span class="glyphicon glyphicon-plus pull-right action-icon"></span></h3>
            </div>
            <div class="panel-body">
                <ul>
                    <li ng-repeat="gen in genres">{{gen.GENRE_NAME}}</li>
                </ul>
            </div>
        </div>
    </div>

    
    <div class="col-lg-9">
        <div class="panel panel-primary" ng-controller="dvdListCtrl">
            <div class="panel-heading">
                <h3 class="panel-title">DVD List <span class="glyphicon glyphicon-refresh pull-right action-icon" ng-click="refreshData()"></span></h3>
            </div>

            <div class="panel-body">
                <table class="table table-condensed table-stripped table-hover">
                    <thead>
                    <tr>
                        <th>Title</th>
                        <th>Genre</th>
                        <th>Director</th>
                        <th>Year</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr ng-repeat="dvd in dvds">
                        <td>{{dvd.DVD_TITLE}}</td>
                        <td>{{getGenre(dvd.DVD_GENRE_ID).GENRE_NAME}}</td>
                        <td>{{getDirector(dvd.DVD_DIRECTOR_ID).DIRECTOR_NAME}}</td>
                        <td>{{dvd.DVD_RELEASE_YEAR}}</td>
                        <td><span class="glyphicon glyphicon-remove action-icon text-danger pull-right" data-toggle="tooltip" data-placement="right" title="Remove this DVD" ng-click="removeDVD(dvd.DVD_ID)"></span></td>
                    </tr>
                    <tr id="AddDvdRow" ng-hide="addMode">
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td><span class="glyphicon glyphicon-plus text-success action-icon pull-right" ng-hide="addMode" ng-click="enableAddMode(true)"></span></td>
                    </tr>
                    <tr add-dvd-inline ng-show="addMode"></tr>
                    </tbody>
                </table>
               
            </div>
            @*<div class="panel-footer">
                <p>{{getJson(directors)}}</p>
            </div>*@
        </div>
    </div>
</div>