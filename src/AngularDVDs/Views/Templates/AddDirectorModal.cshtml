<div>
    <div id="addDirectorModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-margin">
                    <div id="addDirectorModalLabel" class="modal-title">
                        Add Director <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-margin">
                        <div class="input-group">
                            <span class="input-group-addon stdAddonWidth" id="dirName-addOn">Name</span>
                            <input type="text" class="form-control" placeholder="Director Name" aria-describedby="dirName-addOn" ng-model="dirToAdd" data-toggle="popover" data-trigger="focus" data-content="Director exists in database." id="newDirInput">
                        </div>
                    </div>
                    <div class="form-inline modal-margin">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" ng-click="addDirector(dirToAdd)">Add</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>